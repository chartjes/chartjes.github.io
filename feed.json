        "site": null,
        "tags": null,
        "title": "OpenCFP Engineering Diary -- Adding Doctrine",
        "uri": "https:\/\/grumpy-learning.com\/blog\/2019\/12\/02\/opencfp-engineering-diary-adding-doctrine\/"
